    "test:coverage": "jest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "pnpm dlx chromatic --project-token=YOUR_PROJECT_TOKEN",
    "clean": "rimraf dist",
    "build": "pnpm run clean && pnpm run build:esm && pnpm run build:cjs",
    "build:esm": "tsc --outDir dist/esm --module es2015",
    "build:cjs": "tsc --outDir dist/cjs --module commonjs",
    "prepublishOnly": "pnpm run build",
    "prepare": "pnpm run build",
    "publish": "npm whoami || npm login && npm view $npm_package_name || true && pnpm publish --access public"
  },
